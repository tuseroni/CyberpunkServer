    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Handle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SIN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.REP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Humanity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dammage)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PlayerRoles.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUsers.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
