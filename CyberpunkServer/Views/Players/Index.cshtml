@model IEnumerable<CyberpunkServer.Models.Player>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Handle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SIN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.REP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Humanity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dammage)
        </th>
