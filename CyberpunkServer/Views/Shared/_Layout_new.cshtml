				</a>
				
				<div class="navbar-nav w-100">
					<a class="nav-item nav-link" href="/"><i class="fa fa-laptop me-2"></i>Home</a>
					<a class="nav-item nav-link" href="/Players"><i class="fa fa-solid fa-user"></i>Players</a>
					<a class="nav-item nav-link" href="/subgrids"><i class="fa fa-solid fa-table"></i>Subgrids</a>
				</div>
			</nav>
		</div>
		<!-- Sidebar End -->
		<!-- Content Start -->
		<div class="content">
			<!-- Navbar Start -->
			<nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
